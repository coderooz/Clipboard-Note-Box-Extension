{
    "manifest_version": 3,
    "name": "Clipboard & Note Box",
    "description": "Copy and edit clipboard content, write and save notes in .txt, .pdf, or .doc formats.",
    "version": "1.0",
    "permissions": ["clipboardRead", "clipboardWrite", "storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icons/icon128.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  